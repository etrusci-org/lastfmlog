{
    "app": {
        "apiBaseURL": "http://ws.audioscrobbler.com/2.0/",
        "apiItemsPerPageLimitInitial": 200,
        "apiItemsPerPageLimitIncremental": 20,
        "apiSubsequentPageRequestDelay": 10
    },
    "cliparser": [
        {
            "arg": "action",
            "metavar": "<ACTION>",
            "choices": ["update", "stats"],
            "help": "do something"
        },
        {
            "arg": "--limit",
            "metavar": "<INTEGER>",
            "default": "",
            "help": "set results limit"
    },
        {
            "arg": "--datadir",
            "metavar": "<DIRECTORY>",
            "default": "",
            "help": "override default data directory path"
        }
    ]
}
